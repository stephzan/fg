{% extends 'model_center_auth.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header_center %}
{% endblock %}
{% block header_right %}
    <li class="nav-item">
        <a href="/register">
            <button class="btn btn-outline-primary" type="button">Register</button>
        </a>
    </li>
{% endblock %}

{% block form %}
    <h1 class="h3 mb-3 font-weight-normal">{{ 'Please sign in'|trans }}</h1>

    <form method="post" class="center_form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="form-group">
            <label for="inputEmail" class="sr-only">{{ 'Email'|trans }}</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="{{ 'Email'|trans }}" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="sr-only">{{ 'Password'|trans }}</label>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ 'Password'|trans }}" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> {{ 'Remember me'|trans }}
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'Sign in'|trans }}
        </button>
    </form>

    <h1 class="h5 mb-3 font-weight-normal" style="margin-top: 0.9rem;">{{ 'Or sign in instantly with'|trans }}</h1>
    <a class="btn btn-lg btn-primary fa fa-facebook" href="/connect/facebook">
        {{ 'Facebook'|trans }}
    </a>
    <a class="btn btn-lg btn-danger fa fa-google" href="/connect/google">
        {{ 'Google'|trans }}
    </a>
    <a class="btn btn-lg btn-primary fa fa-discord" href="/connect/discord">
        {{ 'Discord'|trans }}
    </a>    
{% endblock %}

{% block javascripts %}{% endblock %}
