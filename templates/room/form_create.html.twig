{% extends 'modal_tpl.html.twig' %}

{% block modal_title %}
	{{ 'Create your room'|trans }}
{% endblock %}

{% block modal_body %}
	{% form_theme room_form 'bootstrap_4_layout.html.twig' %}
	{% if room_form_error != '' %}
	    <div class="alert alert-danger">{{ room_form_error }}</div>
	{% endif %}

	{{ form_start(room_form, {'attr':{'class':'center_form'}}) }}
	    <div class="form-group">
            {{ form_label(room_form.name) }}
            {{ form_errors(room_form.name) }}
            {{ form_widget(room_form.name) }}
            {{ form_help(room_form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(room_form.game) }}
            {{ form_errors(room_form.game) }}
            {{ form_widget(room_form.game) }}
            {{ form_help(room_form.game) }}
        </div>

        <div class="form-group">
            {{ form_label(room_form.nbSeats) }}
            {{ form_errors(room_form.nbSeats) }}
            {{ form_widget(room_form.nbSeats) }}
            {{ form_help(room_form.nbSeats) }}
        </div>

        <div class="form-group">
            {{ form_label(room_form.private) }}
            {{ form_errors(room_form.private) }}
            {{ form_widget(room_form.private) }}
            {{ form_help(room_form.private) }}
        </div>

        <div class="form-group">
            {{ form_label(room_form.password) }}
            {{ form_errors(room_form.password) }}
            {{ form_widget(room_form.password, {'attr': {'disabled': 'disabled'}}) }}
            {{ form_help(room_form.password) }}
        </div>

	    <button class="btn btn-lg btn-primary" type="submit">{{ 'Create!'|trans }}</button>
	{{ form_end(room_form) }} 
{% endblock %}